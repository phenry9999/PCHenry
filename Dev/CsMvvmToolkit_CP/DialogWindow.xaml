<Window x:Class="CsMvvmToolkit_CP.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CsMvvmToolkit_CP"
        mc:Ignorable="d"
        Title="DialogWindow" Height="300" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="592">
                <Label x:Name="labelItem" Content="Item:"/>
                <TextBox Name="txtBoxItem" VerticalAlignment="Top" Height="24" />
                <Label x:Name="labelNote" Content="Note:"/>
                <TextBox Name="txtBoxNote" VerticalAlignment="Top" Height="24" />
                <Label x:Name="labelLink" Content="Link:"/>
                <TextBox Name="txtBoxLink" VerticalAlignment="Top" Height="24" />
                <Button Content="Cancel" IsCancel="True" Height="33" />
                <Button Click="OkClick" Content="Ok" IsDefault="true" Height="33" />

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
