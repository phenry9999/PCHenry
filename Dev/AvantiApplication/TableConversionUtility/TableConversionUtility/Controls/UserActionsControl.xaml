<UserControl x:Class="TableConversionUtility.Controls.UserActionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TableConversionUtility.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Orientation="Horizontal">
		<Button Content="Add" Command="{Binding AddCommand}" Width="100" Margin="5"/>
		<Button Content="Sort" Command="{Binding SortCommand}" Width="100" Margin="5"/>
		<Button Content="Save as Xml" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
	</StackPanel>
</UserControl>
