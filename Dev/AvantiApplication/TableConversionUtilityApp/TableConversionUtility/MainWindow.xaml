<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableConversionUtility"
        mc:Ignorable="d"
        Title="Table Conversion Utility" Height="450" Width="800" Icon="/Assets/Avanti.jpg">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBox Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
		<StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
			<Button Content="Add" Command="{Binding AddCommand}"/>
			<Button Content="Sort" Command="{Binding SortCommand}"/>
			<Button Content="Save as Xml" Command="{Binding SaveCommand}"/>
		</StackPanel>
		<StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal">
			<ListBox/>
		</StackPanel>
	</Grid>
</Window>
