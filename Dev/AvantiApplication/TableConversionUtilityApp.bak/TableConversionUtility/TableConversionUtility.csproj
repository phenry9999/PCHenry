<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\Avanti.ico</ApplicationIcon>
    <Description>Avanti Systems Developer Position Interview Application</Description>
    <Copyright>PCHenry.com 2023</Copyright>
    <PackageProjectUrl>www.PCHenry.com</PackageProjectUrl>
    <PackageIcon>Avanti.jpg</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Avanti.gif" />
    <None Remove="Assets\Avanti.jpg" />
    <None Remove="Assets\AvantiLogoYellow.ARicohCompany.png" />
    <None Remove="Assets\SplashAdvert.Yellow.HowWillAvantiSlingshotPrintMisHelpYourPrintShopSucceed.png" />
    <None Remove="Assets\TwitterBanner.StickiesThumbtackedToBlackBoard.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Avanti.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Avanti.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Avanti.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </Content>
    <Content Include="Assets\AvantiLogoYellow.ARicohCompany.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\SplashAdvert.Yellow.HowWillAvantiSlingshotPrintMisHelpYourPrintShopSucceed.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\TwitterBanner.StickiesThumbtackedToBlackBoard.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Controls\" />
    <Folder Include="ViewModels\" />
    <Folder Include="Views\" />
    <Folder Include="Services\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TableConversionUtility.BusLogic\TableConversionUtility.BusLogic.csproj" />
    <ProjectReference Include="..\TableConversionUtility.Data\TableConversionUtility.Data.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\Avanti.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
